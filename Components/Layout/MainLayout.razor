@inherits LayoutComponentBase

<div class="app-shell">
    <aside class="sidebar-card w-full max-w-xs">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs uppercase tracking-[0.2em] text-slate-500">XTMon</p>
                <h1 class="text-2xl font-semibold text-slate-900">Monitoring</h1>
            </div>
            <span class="inline-flex items-center rounded-full bg-emerald-100 px-2 py-1 text-xs font-semibold text-emerald-700">Live</span>
        </div>

        <div class="mt-6">
            <NavMenu />
        </div>

        <div class="mt-8 rounded-2xl border border-slate-200 bg-white/70 p-4">
            <p class="text-xs uppercase tracking-[0.2em] text-slate-500">Database</p>
            <p class="mt-2 text-sm font-semibold text-slate-900">LOG_FI_ALMT</p>
            <p class="muted mt-1">Server: localhost:1433</p>
        </div>
    </aside>

    <main class="flex min-h-[80vh] flex-1 flex-col gap-6">
        <header class="surface flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
            <div>
                <p class="text-xs uppercase tracking-[0.2em] text-slate-500">Data Processing</p>
                <h2 class="text-3xl font-semibold text-slate-900">Operational pulse</h2>
                <p class="muted mt-1">Keep an eye on capacity, growth, and recent activity.</p>
            </div>
            <div class="flex flex-wrap items-center gap-3 text-sm text-slate-600">
                <div class="rounded-full bg-white px-3 py-1 shadow-sm ring-1 ring-slate-200">Interactive Server</div>
                <div class="rounded-full bg-white px-3 py-1 shadow-sm ring-1 ring-slate-200">ADO SqlClient</div>
            </div>
        </header>

        <section class="surface">
            @Body
        </section>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet class="fixed bottom-6 right-6 hidden rounded-2xl bg-rose-600 px-4 py-3 text-sm font-semibold text-white shadow-lg">
    <span>An unhandled error has occurred.</span>
    <a href="." class="ml-3 underline">Reload</a>
    <span class="dismiss ml-3 cursor-pointer">Dismiss</span>
</div>
